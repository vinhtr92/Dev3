<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/plugins/system/jsnframework/libraries/joomlashine/form/fields">
    <fieldset name="general" label="JSN_UNIFORM_PAYMENT_PAYPAL_GENERAL"  markupTag="div">
        <field name="payment_product" type="jsnselectbox" default="standard" size="1" class="form-field-select" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_PAYMENT_PRODUCT_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_PAYMENT_PRODUCT_DESC">
            <option value="standard">PLG_JSNUNIFORM_PAYMENT_PAYPAL_STANDARD_CHECKOUT</option>
            <option value="express">PLG_JSNUNIFORM_PAYMENT_PAYPAL_EXPRESS_CHECKOUT</option>
        </field>
        <field name="test_mode" type="jsnradio" default="0" size="1" class="form-field-select" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_TEST_MODE" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_TEST_MODE_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        
    </fieldset>
    <fieldset name="apilive" markupTag="div" group="paypalapi" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_LABEL" addfieldpath="/plugins/system/jsnframework/libraries/joomlashine/form/fields">
        <field name="paypal_live_api_username" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_USERNAME_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_USERNAME_DESC"/>
        <field name="paypal_live_api_password" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_PASSWORD_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_PASSWORD_DESC"/>
        <field name="paypal_live_api_signature" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_SIGNATURE_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_SIGNATURE_DESC"/>
    </fieldset>
    <fieldset name="apisandbox" markupTag="div" group="paypalapi" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_LABEL" addfieldpath="/plugins/system/jsnframework/libraries/joomlashine/form/fields">
        <field name="paypal_sandbox_api_username" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_USERNAME_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_USERNAME_DESC"/>
        <field name="paypal_sandbox_api_password" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_PASSWORD_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_PASSWORD_DESC"/>
        <field name="paypal_sandbox_api_signature" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_SIGNATURE_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_SANDBOX_API_SIGNATURE_DESC"/>
    </fieldset>
    <fieldset name="apilivestd" markupTag="div" group="paypalapistd" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LIVE_API_STANDARD_LABEL" addfieldpath="/plugins/system/jsnframework/libraries/joomlashine/form/fields">
        <field name="merchant_email" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_MERCHANT_EMAIL_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_MERCHANT_EMAIL_DESC"/>
    </fieldset>
    <fieldset name="apisandboxstd" markupTag="div" group="paypalapistd" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_STANDARD_SANDBOX_API_LABEL" addfieldpath="/plugins/system/jsnframework/libraries/joomlashine/form/fields">
        <field name="merchant_email_sandbox" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_MERCHANT_EMAIL_SANDBOX_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_MERCHANT_EMAIL_SANDBOX_DESC"/>
    </fieldset>
    <fieldset name="currencyoption" markupTag="div" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_EXTRA_OPTIONS" addfieldpath="/plugins/system/jsnframework/libraries/joomlashine/form/fields">
        <field name="paypal_cancel_url" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_CANCEL_URL_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_CANCEL_URL_DESC"/>
        <field name="paypal_logo" type="jsntext" class="jsn-input-large-fluid" default="" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LOGO_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_LOGO_DESC"/>
		<field name="archive_cancel_transaction" type="jsnradio" default="1" size="1" class="form-field-select" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_ARCHIVE_CANCEL_TRANSACTION" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_ARCHIVE_CANCEL_TRANSACTION_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
		<field name="receive_confirmation_of_successful_transaction" type="jsnradio" default="0" size="1" class="form-field-select" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_RECEIVE_CONFIRMATION_OF_SUCCESSFULL_TRANSACTION" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_RECEIVE_CONFIRMATION_OF_SUCCESSFULL_TRANSACTION_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>        
		<field name="paypal_currency" type="jsnselectbox" default="USD" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_CURRENCY_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_CURRENCY_DESC">
            <option value="USD">U.S. Dollar</option>
            <option value="THB">Thai Baht</option>
            <option value="TWD">Taiwan New Dollar</option>
            <option value="CHF">Swiss Franc</option>
            <option value="SEK">Swedish Krona</option>
            <option value="SGD">Singapore Dollar</option>
            <option value="RUB">Russian Ruble</option>
            <option value="GBP">Pound Sterling</option>
            <option value="PLN">Polish Zloty</option>
            <option value="PHP">Philippine Peso</option>
            <option value="NZD">New Zealand Dollar</option>
            <option value="NOK">Norwegian Krone</option>
            <option value="MXN">Mexican Peso</option>
            <option value="JPY">Japanese Yen</option>
            <option value="HUF">Hungarian Forint</option>
            <option value="HKD">Hong Kong Dollar</option>
            <option value="EUR">Euro</option>
            <option value="DKK">Danish Krone</option>
            <option value="CZK">Czech Koruna</option>
            <option value="CAD">Canadian Dollar</option>
            <option value="BRL">Brazilian Real (only for Brazilian members)</option>
            <option value="AUD">Australian Dollar</option>
        </field>
        <field name="paypal_positon_symbol" type="jsnselectbox" default="LEFT" label="PLG_JSNUNIFORM_PAYMENT_PAYPAL_POSITION_SYMBOL_LABEL" description="PLG_JSNUNIFORM_PAYMENT_PAYPAL_POSITION_SYMBOL_DESC">
            <option value="left">Left ($99.99)</option>
            <option value="right">Right (99.99$)</option>
            <option value="left_with_space">Left with space ($ 99.99)</option>
            <option value="right_with_space">Right with space (99.99 $)</option>
        </field>        
    </fieldset>
</form>
